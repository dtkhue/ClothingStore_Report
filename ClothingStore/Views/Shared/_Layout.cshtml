@{ 
        var user = (DataAccess.DTO.UserDTO)Session[DataAccess.Libs.UserSessionConfig.SessionAccount];
      
}



<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @*@Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")*@
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/Site.css?@DateTime.Now.Ticks" rel="stylesheet" />
    <link href="~/Content/jquery.dataTables.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.4.1.js?v=@DateTime.Now.Ticks"></script>
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery.dataTables.min.js"></script>
    <script src="~/Scripts/sweetalert.js"></script>


</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Clothing Store", "Index", "Product", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Product")</li>
                    @if (user != null)
                    {
                        <li>@Html.ActionLink("My Cart", "Index", "Cart")</li>
                        <li>@Html.ActionLink("Order Record", "Index", "Order")</li>
                        }
                </ul>


                <ul class="nav navbar-nav navbar-right">
                    @if (user != null)
                    {
        <li>@Html.ActionLink("Welcome " + user.UserFullName, "Index", "Product")</li>
                        <li>@Html.ActionLink("Logout", "Logout", "Unauthenticate")</li>
 }
                    else
                    {
        <li>@Html.ActionLink("Login", "Login", "Unauthenticate")</li>
                        }
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer class="navbar navbar-fixed-bottom"">
            <p class="body-content">&copy; @DateTime.Now.Year - My Clothing Store Application</p>
        </footer>
    </div>
    
   

  
    @*@Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")*@
    @RenderSection("scripts", required: false)
</body>
</html>
